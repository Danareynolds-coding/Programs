<%- include('../partials/header') %>

    <main class="main" id="main">

        <section class="section">
            <div class="container mt-3">
                <div class="row row-col-1 row-cols-md-6 g-3">
                    <% data.forEach(actors=> { %>
                        <div class="col">
                            <div class="card">
                                <a href="singleActor/<%= actors.actors_id %>">
                                    <img src="/image/imgActors/<%= actors.ImagePath %>" alt="actor img"
                                        class="card-img-top img-fluid" />
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h3>
                                        <%= actors.fName%>
                                            <%= actors.lName%>
                                    </h3>
                                    <p>
                                        <%= actors.character %>
                                    </p>
                                </div>
                        </div>
                    <%})%>
                </div>
            </div>
        </section>

    </main>
    <%- include('../partials/footer') %>