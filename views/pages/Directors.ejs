<%- include('../partials/header') %>

        <section class="section">
            <div class="MyInfo container">
                <div class=" d-flex justify-content-center">
                    <div style="margin:2em 2em;">Criticker: <a href="https://www.criticker.com/">  HERE</a></div>
                    <div style="margin:2em 2em;">LetterBoxed: <a href="https://letterboxd.com/about/film-data/">  HERE</a></div>
                    <div style="margin:2em 2em;">Mandy: <a href= "https://www.mandy.com/aa/guides/members/contact-directors/">  HERE</a></div>
                    <div style="margin:2em 2em;">Quora: <a href= "https://www.quora.com/">  HERE</a></div>
                </div>
            </div>
            <div>
                <p class="box">All Directors With ProductionCo<a href="/directorsWithProductionCo">  HERE</a></p>
            </div>
            <div class="container mt-4">
                <div class="row row-cols-1 row-cols-md-6  g-4">
                    <%= counter = 0; %>
                    <% data.forEach(directors=> { %>
                        <div class="col"> 
                            <div class="card h-100">
                                <a href="/directors/<%= directors.directors_id %>">  
                                    <img src="/image/imgDirectors/<%= directors.ImagePath %>" alt="actor img"
                                    class="card-img-top img-fluid"/>
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h4 style="font-size:1em;">
                                        <%= directors.fName%>
                                        <%= directors.lName%>
                                        Director <%= ++counter %>: <%= directors.lName %>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    <%})%>
                </div>
            </div>
        </section>

<%- include('../partials/footer') %>