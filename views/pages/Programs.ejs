<%- include('../partials/header') %>
<main class="main">
    <section class="section" >
        <div class="MyInfo d-flex justify-content-center">
            <p style="margin:2em 2em;">IMDb: <a href="https://www.imdb.com/">  HERE</a></p>
            <p style="margin:2em 2em;">Metacritic: <a href="https://www.metacritic.com/">  HERE</p>
            <p style="margin:2em 2em;">RottenTomatoes: <a href= "https://www.rottentomatoes.com/">  HERE</a></p>
            <p style="margin:2em 2em;">TV Tropes: <a href= "https://tvtropes.org/">  HERE</a></p>
        </div>
        <div class="container mt-4">
            <div class="row row-cols-1 row-cols-md-3 g-4 ">
                <% let counter=0; %>
                <% data.forEach(programs=> { %>
                    <div class="col">
                        <div class="card h-100">
                            <a href="/singleProgram/<%= programs.programs_id %>">
                                <img
                                src="/image/imgPosters/<%= programs.PosterURL %>" alt="poster for the Program img"
                                class="card-img-top img-fluid"/>
                            </a>
                            <div class="card-body d-flex flex-column">
                            <h2 class="ptitle">
                                Program <%= ++counter %>: <%= programs.title %>
                            </h2>
                            <p class="description">
                                <%= programs.description %>
                            </p>
                            <p class="card-text" id="yrReleased">
                                <%= programs.yr_released %>
                            </p>
                            </div>
                        </div>
                    </div>  
                <%})%>    
            </div>
                
        </div>
    </section>
</main>
<%- include('../partials/footer') %>