<%- include('../partials/header') %>

    <section class="section" id="section">
        <div class="container">

            <div class="row item-center">
                <div class="col-4">
                    <div class="card">
                        <img src="/image/imgPosters/<%= programs.PosterURL %>" alt="poster for the Program img"
                            class="image img-fluid" />
                        <div class="card-body">
                            <h2 class="Title">
                                <%= programs.title %>
                            </h2>
                            <p class="card-text" id="yrReleased">
                                <%= programs.yr_released %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="info">
                        <h5>Program Information</h5>
                        <ul class="list-style:none">
                            <li>Rating: <%= programs.rating %>
                            </li>
                            <li>Runtime: <%= programs.runtime %>
                            </li>
                            <li>Budget: <%= programs.budget %>
                            </li>
                            <li>GrossProfit: <%= programs.grossProfit %>
                            </li>
                            <li>Showing: <%= programs.showing %>
                            </li>
                            <li>Five Point Rank: <%= programs.fivePointRating %>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-3">
                    <h5 class="text-center">More Information</h5>
                    <p>For Actors :<a href="/Prog-Act/<%= programs.programs_id %>"> HERE </a></p>
                    <p>For Directors :<a href="http:localhost:3000/api/programs/with_directors"> HERE </a></p>
                    <p>For Production Company :<a href="http:localhost:3000/api/programs/with_productionCo">HERE</a> 
                    </p>
                    <p>For Streaming Platforms :<a href="http:localhost:3000/api/programs/with_streaming"> HERE </a>
                    </p>
                    <p>For Genres :<a href="http:localhost:3000/api/programs/with_genre"> HERE </a></p>
                </div>
            </div>
        </div>
    </section>
    <%- include('../partials/footer') %> 