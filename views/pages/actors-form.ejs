

<%- include('../partials/header') %> 

<main class="main" id="main">
    <div class="container">
      <h2 class="text-center">ADD AN ACTOR</h2>
      <form 
          action="http://localhost:3000/api/actors/create" 
          method="POST"
          class="form"
          id="actorsForm"
      >
      <div class="row mb-3">
        <div class="col">
          <label for="first_name" class="form-label">
            first name
          </label>
          <input 
            type="text"
            id="first_name"
            name="first_name"
            class="form-control">
        </div>
        <div class="col">
          <label for="last_name" class="form-label">
            last name
          </label>
          <input 
            type="text"
            id="last_name"
            name="last_name"
            class="form-control">
        </div>
        <div class="col">
          <label for="Image" class="form-label">
            Image
          </label>
          <input 
            type="img"
            id="ImagePath"
            name="ImagePath"
            class="form-control">
        </div>
      </div>
      <div class="row">
        <div class="col">
          <button 
            class="btn btn-primary"
            type="submit"
            role="button"
          >ADD An ACTOR
          </button>
        </div>
      </div>
      </form>
    </div>
</main>

<%- include('../partials/footer') %> 